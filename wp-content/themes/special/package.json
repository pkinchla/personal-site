    "@types/dom-view-transitions": "^1.0.6",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "autoprefixer": "^10.4.22",
    "browser-sync": "^3.0.4",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "prettier": "^3.7.1",
    "rollup": "^4.53.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
