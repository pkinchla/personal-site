{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist/js",
    "skipLibCheck": true
  },
  "include": ["./src/ts/**/*.ts"]
}
