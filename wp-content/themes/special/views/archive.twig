{% extends "base.twig" %}

{% block content %}
  <article>
    <header>
      <h1>{{title}}</h1>
      {% if page_number %}
        <span>(Page {{page_number}})</span>
      {% endif %}
    </header>
    <figure>
      <img
        src="{{theme.path}}/images/cham.jpg"
        alt="close up of miniature metallic chameleon standing on a metallic pedestal"
      >
    </figure>
    <h2>{{post.post_type}}</h2>
    {% for post in posts %}
      {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
    {% endfor %}
    {% include 'pagination.twig' %}
  </article>
{% endblock %}