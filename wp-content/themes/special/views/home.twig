{% extends "base.twig" %}

{% block content %}
  <article id="post-{{post.ID}}">
    <header class="content-grid">
      <div>
        <h1>
          {{post.title}}
          {% if page_number %}
          <span>(Page {{page_number}})</span>
          {% endif %}
        </h1>
        <div class="sans-regular-italic"><time datetime="{{post.modified_date|date('c')}}">Last Updated on {{post.modified_date|date('l, F jS, Y')}}</time></div>
      </div>
    </header>
    {% if post.thumbnail %}
    <figure>
      {% include 'featured-image.twig' %}
    </figure>
    {% endif %}
    <div class="content-grid">
      <div>{{post.content}}</div>
      <section>
        <h2 id="post-list" class="assistive-text">Blog Posts</h2>
        <ul role="list">
          {% for post in posts %}
            <li>{% include 'card.twig' %}</li>
          {% endfor %}
        </ul>
        {% include 'pagination.twig' %}
      </section>
      <section class="action-list">
        <h2 id="categories">Categories</h2>
        <ul role="list">
          {% for cat in categories %}
          <li class="sans-regular-italic"><a href="{{cat.link}}">{{cat.title}}</a>  (<a href="/blog/category/{{cat.title|replace({" ":"-"})|lower}}/feed/">RSS</a>)</li>
          {% endfor %}
        </ul>
      </section>
    </div>
  </article>
{% endblock %}
