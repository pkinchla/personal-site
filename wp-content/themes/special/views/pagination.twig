<div class="pagination">
  {% if pagination.prev %}
    <a href="{{pagination.prev.link}}"
       class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">
       Prev <span class="assistive-text">Page</span>
    </a>
  {% endif %}
  {% for page in pagination.pages %}
    {% if page.link %}
      <a href="{{page.link}}" class="{{page.class}}">
       <span class="assistive-text">Page</span> {{page.title}}
    </a>
    {% else %}
      <span class="{{page.class}}">
       <span class="assistive-text">Page</span> {{page.title}}
    </span>
    {% endif %}
    </li>
  {% endfor %}
  </ul>
  {% if pagination.next %}
    <a
      href="{{pagination.next.link}}"
      class="next {{pagination.next.link|length ? '' : 'invisible'}}">
      Next <span class="assistive-text">Page</span>
    </a>
  {% endif %}
</div>
