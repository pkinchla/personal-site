{% if menu %}
  <ul id="primary-menu" role="list">
  {% for item in menu %}
    <li>
      <a class="no-offset" href="{{item.link}}" aria-current="{{ (item.title|lower == menu_type) ? 'page' : 'false' }}">{{item.title}}</a>
      {% include "menu.twig" with {'menu': item.children} %}
    </li>
  {% endfor %}
  </ul>
{% endif %}