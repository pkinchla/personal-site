{
  "plugins": [
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "color-no-invalid-hex": true,
    "media-feature-range-notation": null,
    "unit-allowed-list": [
      "fr",
      "ch",
      "em",
      "rem",
      "%",
      "vh",
      "vw",
      "ms",
      "s"
    ],
    "order/properties-order": [
      "font-family",
      "font-weight",
      "font-size",
      "font-variation-settings",
      "display",
      "flex",
      "flex-direction",
      "order",
      "position",
      "left",
      "right",
      "top",
      "bottom",
      "background",
      "color",
      "width",
      "height",
      "padding-block-start",
      "padding-block-end",
      "padding-inline-start",
      "padding-inline-end",
      "margin-block-start",
      "margin-block-end",
      "margin-inline-start",
      "margin-inline-end"
    ],
    "number-max-precision": 6
  }
}