{
  "plugins": [
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "color-no-invalid-hex": true,
    "max-empty-lines": 2,
    "unit-allowed-list": [
      "fr",
      "ch",
      "em",
      "rem",
      "%",
      "vh",
      "vw",
      "ms",
      "s"
    ],
    "order/properties-order": [
      "font-family",
      "font-weight",
      "font-size",
      "font-variation-settings",
      "display",
      "flex",
      "flex-direction",
      "order",
      "position",
      "left",
      "right",
      "top",
      "bottom",
      "background",
      "color",
      "width",
      "height",
      "padding",
      "margin"
    ],
    "number-max-precision": 6
  }
}